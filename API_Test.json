										"exec": [
											"//Check if Post was created\r",
											"pm.test(\"Status code is 201\", function () {\r",
											"    pm.response.to.have.status(201);\r",
											"});\r",
											"\r",
											"//Check if POST content comes out as expected\r",
											"pm.test(\"Content matches \\\"My first API Blog Post\\\"\", function () {\r",
											"    pm.expect(pm.response.text()).to.include(\"My first API Blog Post\");\r",
											"});\r",
											"\r",
											"//Check if POST is sent as JSON\r",
											"pm.sendRequest(\"https://postman-echo.com/get\", function (err, response) {\r",
											"    console.log(response.json());\r",
											"});\r",
											"//Check if POST matches 200|201|202\r",
											"pm.test(\"Successful POST request\", function () {\r",
											"    pm.expect(pm.response.code).to.be.oneOf([200, 201, 202]);\r",
											"});\r",
											"//Check if Post includes what was inputted\r",
											"pm.test(\"Content = my first API Blog Post\", function(){\r",
											"    pm.expect(pm.response.text()).to.include(\"\\content\\\": \\\"My first API Blog Post\\\"\");\r",
											"});\r",
											"\r",
											"\r",
											"//Extract POST created location into VARIABLE ENVIRONMENT\r",
											"let myBlogLink = pm.response.to.have.header(\"location\");\r",
											"pm.environment.set(\"myBlogLink\", pm.response.headers.get(\"Location\"));\r",
											"\r",
											"\r",
